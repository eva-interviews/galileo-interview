{
  "configurations": [
    {
      "name": "Remote Debug",
      "type": "python",
      "request": "attach",
      "preLaunchTask": "docker-compose-up",
      "port": 5678,
      "host": "0.0.0.0",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/core",
          "remoteRoot": "/core"
        }
      ],
      "logToFile": true
    }
  ]
}
  